<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsDemoArimac" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="CommonEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:padding">@dimen/dimen10</item>
    </style>

    <style name="CommonButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/edit_text_bg</item>
    </style>

    <style name="TextView.size14" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/dimen14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.size24" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/dimen24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonTextView.size14" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/dimen14sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="CommonRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_btn_selector</item>
        <item name="android:textColor">@drawable/radio_text_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/dimen14sp</item>
    </style>
</resources>